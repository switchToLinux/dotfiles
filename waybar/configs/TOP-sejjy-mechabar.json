    "on-click-right": "kitty --title 'Û∞§®  Network Manager TUI' bash -c nmtui",
    "interval": 1,
    "min-length": 1,
    "max-length": 1
  },

  "bluetooth": {
    "format": "Û∞Ç∞",
    "format-disabled": "Û∞Ç≤",
    "format-connected": "Û∞Ç±",
    "format-connected-battery": "Û∞Ç±",

    "tooltip-format": 
      "{num_connections} connected",
    "tooltip-format-disabled": 
      "Bluetooth Disabled",
    "tooltip-format-connected": 
